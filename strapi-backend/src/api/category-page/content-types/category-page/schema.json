{
  "kind": "collectionType",
  "collectionName": "category_pages",
  "info": {
    "singularName": "category-page",
    "pluralName": "category-pages",
    "displayName": "Category Page",
    "description": "Best of / Top lists / Category roundup pages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "image",
        "video",
        "text",
        "audio",
        "design",
        "character",
        "photo",
        "other"
      ],
      "required": true
    },
    "listType": {
      "type": "enumeration",
      "enum": [
        "best",
        "free",
        "top",
        "comparison",
        "alternatives"
      ],
      "required": true
    },
    "primaryKeyword": {
      "type": "string",
      "required": true
    },
    "introduction": {
      "type": "richtext",
      "required": true
    },
    "selectionCriteria": {
      "type": "richtext",
      "required": false
    },
    "toolsList": {
      "type": "json",
      "required": true
    },
    "detailedReviews": {
      "type": "richtext",
      "required": true
    },
    "comparisonTable": {
      "type": "json",
      "required": false
    },
    "buyingGuide": {
      "type": "richtext",
      "required": false
    },
    "faq": {
      "type": "json",
      "required": false
    },
    "conclusion": {
      "type": "richtext",
      "required": true
    },
    "isFreeOnly": {
      "type": "boolean",
      "default": false
    },
    "year": {
      "type": "integer",
      "default": 2025
    },
    "estimatedReadTime": {
      "type": "integer",
      "default": 10
    },
    "lastUpdated": {
      "type": "date",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "schemaMarkup": {
      "type": "json",
      "required": false
    }
  }
}
